<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCartera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="Cartera"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnBitcoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:text="BTC/USDT"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnEthereum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="ETH/USDT"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="?android:attr/dividerVertical" />

    <!-- Cantidad de BTC -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Cantidad de BTC:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etBtc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu cantidad"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tvBtcAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0 BTC = $0"
        android:textSize="14sp" />

    <!-- Cantidad de ETH -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Cantidad de ETH:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etEth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu cantidad"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tvEthAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0 ETH = $0"
        android:textSize="14sp" />

    <!-- Total cartera -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Total cartera:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total: $0"
        android:textSize="18sp" />

</LinearLayout>
